{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
<h1 class="text-center">Mes articles</h1>
<div class="example-wrapper">
    {% for article in art %}
    <div>
        <h1>{{ article.titre }}</h1>
    </div>
    <div>
        <p> ecrit le {{ article.CreatedAt | date("d/m/Y") }} a {{ article.CreatedAt | date("H:i") }} </p>
    </div>
    <div>
        <img src="{{ article.image }}" alt="image de l'article">
    </div>
    <div>
        <p>{{ article.content }}</p>
    </div>
    <button class="btn btn-primary mb-5"><a class="text-white" href="{{path('article', {id : article.id}) }}">En lire
            plus</a></button>
    <button class="btn btn-warning mb-5"><a class="text-white"
            href="{{path('blog_edit', {id : article.id}) }}">modifier</a></button>

    {% endfor %}
</div>
{% endblock %}